<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>City</th>
      <th>Postalcode</th>
      <th>Street</th>
      <th>Streetnr</th>
      <th>Account</th>
      <th>Addressable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.country %></td>
        <td><%= address.city %></td>
        <td><%= address.postalCode %></td>
        <td><%= address.street %></td>
        <td><%= address.streetNr %></td>
        <td><%= address.account %></td>
        <td><%= address.addressable %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

